<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgCar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="132dp"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtName"
        android:text="Car Name"
        android:textSize="17sp"
        android:textColor="#1B5E20"
        android:layout_below="@+id/imgCar"
        android:layout_alignRight="@+id/imgCar"
        android:layout_alignEnd="@+id/imgCar"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txtLicense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtName"
        android:layout_alignEnd="@+id/txtName"
        android:layout_alignRight="@+id/txtName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="License"
        android:textColor="#000"
        android:textSize="17sp" />

    <View
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtLicense"
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:background="#6B000000"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>